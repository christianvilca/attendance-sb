<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="attendancePane" alignment="CENTER" prefHeight="572.0" prefWidth="857.0" spacing="64.0" style="-fx-background-color: #282828;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.parish.attendancesb.controllers.AttendanceController">
   <children>
      <HBox alignment="CENTER" spacing="64.0">
         <children>
            <TextField fx:id="code" alignment="CENTER" onKeyPressed="#enter" prefHeight="25.0" prefWidth="264.0" />
            <Text fx:id="clock" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="00:00 AM">
               <font>
                  <Font size="48.0" />
               </font>
            </Text>
         </children>
      </HBox>
      <VBox alignment="CENTER">
         <children>
            <Text fx:id="firstName" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Nombres">
               <font>
                  <Font size="48.0" />
               </font>
            </Text>
            <Text fx:id="lastName" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Apellidos">
               <font>
                  <Font size="48.0" />
               </font>
            </Text>
            <Text fx:id="checkIn" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Hora de llegadaa">
               <font>
                  <Font size="48.0" />
               </font>
            </Text>
            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#report" prefHeight="25.0" prefWidth="89.0" text="Reporte">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets top="16.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</VBox>
